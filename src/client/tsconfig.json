{
	"compilerOptions": {
		"module": "ES6",
		"target": "ES2019",

		"moduleResolution": "node",
		"resolveJsonModule": true,

		"rootDir": ".",
		"outDir": "../../dist/client",

		"allowJs": false,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		"**/__tests__/",
	],
}
